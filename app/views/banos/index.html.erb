<p id="notice"><%= notice %></p>

<h1>Banos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Demo quitar azulejo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banos.each do |bano| %>
      <tr>
        <td><%= bano.nombre %></td>
        <td><%= bano.demo_quitar_azulejo %></td>
        <td><%= link_to 'Show', reform_bano_path(id: bano.id) %></td>
        <td><%= link_to 'Edit', edit_reform_bano_path(bano, reform_id: bano.reform_id) %></td>
        <td><%= link_to 'Destroy', reform_bano_path(bano, reform_id: bano.reform_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bano', new_reform_bano_path(reform_id: params[:reform_id]) %> | 

<%= link_to 'Return to reform', reform_path(id: params[:reform_id]) %>
