      <li style="margin: 0px;">
        <form class="navbar-form navbar-right" role="search" style="width: 100%; padding-left: 3px;">
          <div class="form-group input-group">
            <input type="text" class="form-control" placeholder="Search..">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>        
          </div>
        </form>
      </li>
      <li style="margin: 0px;">
        <ul class="nav navbar-nav navbar-right" style="width: 100%;">
          <li class="dropdown" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="padding-left: 3px; padding-right: 3px; font-size: 0.9em; "><span class="glyphicon glyphicon-user" style="color: white; text-align: center;"></span>
            <span style="color: white">My Account</span><b class="caret"></b>
            </a>
            <ul class="dropdown-menu" >
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% else %>
            <%= link_to login_path do %>
            <i class="fa fa-sign-in" style="margin-top: 10px; color: white"></i><p style="color: white">Login</p>
            <% end %>
          <% end %>
      </ul>
    </li>
  </ul>
