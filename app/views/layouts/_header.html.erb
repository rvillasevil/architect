<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" style="align-content: right">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <div class="icons-list">
      <ul style="display: inline-flex; list-style: none; margin-top: 8px; padding-left: 5px; width: 85%;">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home" style="padding-left: 18px;"></i><p>500plazas</p>
          <% end %>
        </li>
        <li>
          <%= link_to following_user_path(current_user) do %>
            <i class="fa fa-circle-o-notch" aria-hidden="true"></i><p>Circles</p>
          <% end %>
        </li>
        <li>
          <%= link_to '/lista' do %>
            <i class="fa fa-list-ol" aria-hidden="true"></i><p>Ranks</p>
          <% end %>
        </li>
        <li>
          <%= link_to users_path do %>
            <i class="fa fa-users" aria-hidden="true"></i><p>Users</p>
          <% end %>
        </li>
      </ul>
    </div>
    </div>

    <div class="collapse navbar-collapse" id="myNavbar">

          <% if logged_in? %>

      <form class="navbar-form navbar-right" role="search" style="width: 20%; padding-left: 3px;">
        <div class="form-group input-group">
          <input type="text" class="form-control" placeholder="Search..">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>        
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right" style="width: 20%;">
            <li class="dropdown" style="width: 120px;" >
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="padding-left: 3px; padding-right: 3px; font-size: 0.9em; "><span class="glyphicon glyphicon-user"></span>
