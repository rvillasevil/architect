          <% end %>
        </li>
        <li>
          <%= link_to '/lista' do %>
            <i class="fa fa-university fa-lg" aria-hidden="true" style="color: white"></i><p style="color: white">Candidates</p>
          <% end %>
        </li>
        <li>
          <%= link_to users_path do %>
            <i class="fa fa-users fa-lg" aria-hidden="true" style="color: white"></i><p style="color: white">Users</p>
          <% end %>
        </li>
        <li>
          <%= link_to '/petitions' do %>
            <i class="fa fa-envelope-open fa-lg" aria-hidden="true" style="color: white"></i><p style="color: white">Petitions</p>
          <% end %>
        </li>
        <% else %>
          <ul style="display: inline-flex; list-style: none; margin-top: 8px; padding-left: 5px; width: 30%; text-align: center; ">
