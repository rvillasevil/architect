        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <div class="icons-list">
        <% if logged_in? %>
      <ul style="display: inline-flex; list-style: none; margin-top: 8px; padding-left: 5px; width: 75%;">
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home fa-lg" aria-hidden="true" style="color: white"></i><p style="color: white">loobIN</p>
          <% end %>
        </li>
          
        <li>
          <%= link_to user_plazas_path(current_user) do %>
