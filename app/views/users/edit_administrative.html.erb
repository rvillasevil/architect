<div class="container">
  <% provide(:title, "Edit user") %>
  <h1 style="font-size: 30px;"><b>Selecciona tus círclos administrativos</b></h1>
  <h2>Los círculos donde podrás ser candidato del mejor partido del mundo</h2>
  <div class="row">
    <div id="formulario" class="col-md-6 col-md-offset-3">
        <%= form_tag(update_administrative_user_path(current_user), remote: true, method: :put) do |f| %>
        <%# render 'shared/error_messages', object: f.object %>

            <%= label_tag "Selecciona tu círculo autonómico para poder ser candidato y estar actualizado" %>
            <%= select_tag(:autonomia, options_for_select(Comunidad.all.collect {|p| [ p.comunidad ]} )) %>
        <%= submit_tag "Save changes", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>