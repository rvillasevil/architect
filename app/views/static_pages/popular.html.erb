<% provide(:title, 'Popular') %>
  <div class="container">
    <div class="row">
      
      <aside class="col-sm-6">
        <h3 style="margin-top: 0px; padding-left: 10px;">Las consultas más votadas</h3>
          <%# render 'shared/user_info' %>
          <%= render 'microposts/petition_short' %>
        <section class="stats">
          <%# render 'shared/stats' %>
        </section>
      </aside>

      <div class="col-sm-6">
      <% if logged_in? %>
        <%= render 'static_pages/sigue_plaza' %>
      <% end %>
      <h3 style="margin-top: 0px; padding-left: 10px;">Lo más votado en polittizen</h3>
        <div class="home_popular" style="margin-top: 15px;">
          <ul>
            <li class="popular"> 
              <%= link_to "HOT", 'popular_last_day', style: "color: grey;" %>
            </li>            
            <li class="popular">
              <%= link_to "HOME", root_url, style: "color: grey;" %>  
            </li>
            <li class="home">
              <%= link_to "POPULAR", '/popular'  %>
            </li>
          </ul>
        </div>
        <ul class="microposts">

          <%# render @microposts %>
          <% @posts_masvotados = @posts_masvotados.paginate(page: params[:page], per_page: 10).each do |posts_masvotados| %>
            <% @microposts = Micropost.where(id: posts_masvotados) %>
            <%= render @microposts %>
          <% end %>
          <%= will_paginate @posts_masvotados %>

          <%# .where(created_at: 7.days.ago..Time.current)%>
          <div class="instrucciones">
            Para tener más post, sigue a más personas, participa en más círculos o colabora con más acciones o causas.
          </div>
        </ul>     
    </div>
  </div>
</div>