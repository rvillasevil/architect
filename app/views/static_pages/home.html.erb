<% provide(:title, 'loobIN') %>
<% if logged_in? %>
  <div class="container">
    <div class="row">
        <div class="col-sm-2">
          <div>
            <%= render 'shared/user_info' %>
          </div>
          <div class="stats">
            <%= render 'shared/stats' %>
          </div>
        </div>

      <div class="col-sm-6">
        <%= render 'static_pages/sigue_plaza' %> 
