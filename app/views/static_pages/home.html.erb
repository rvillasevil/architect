<% content_for :head do %>
  <!-- Open Graph tags -->
  <meta property="og:title" content="ConstructUX" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://www.constructux.com" />
  <meta property="og:description" content="ConstructUX, donde diseñar tu reforma o construir tu vivienda." />
  <meta property="og:image" content="partida_default.jpg"  />  

<% end %> 

<% provide(:title) %>
<% if logged_in? %>
  <div class="container">
    <div class="row">

      <div class="col-md-10 col-md-offset-1">

        <div class="constructor">

          <div class="campos" style="">

            <% if current_user.admin? %>
              <% Micropost.all.each do |post| %>
              <h5>
                <% if post.hashtag1 == "cliente" %>
                  <% @cliente = User.find(post.user_id) %>
                  <% @reforma = Reform.find(post.hashtag2) %>
                  <%= @cliente.name %>
                  <%= post.created_at %>
                  <%= @reforma.nombre %>
                  <%= @reforma.id %>
                <% end %>
              </h5>
              <% end %>
            <% end %>

            <% if  current_user.empresa == true %>

              <div class="iconos_inicio">

                <h3 style="font-weight: bold; margin-top: 50px;">Saca el máximo partido a tu empresa</h3>
                <ul style="list-style: none; width: 100%; padding: 0px; margin: 0px;" class="">

                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <%= image_tag('retirar_friso_madera.jpg', size: "60", class: 'oferta_imagen' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Crear anuncio</b></h5> <h5><span style="font-size: 14px;">(* en desarrollo)</span></h5></span>
                  </li>

                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <% if Empresa.find_by(user_id: current_user.id) != nil %>
                      <%= link_to empresa_path(id: current_user.id) do %>
                        <%= image_tag('retirar_friso_madera.jpg', size: "60", class: 'oferta_imagen' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Tus Datos</b></h5></span>
                      <% end %>
                    <% else %>
                      <%= link_to new_empresa_path do %>
                        <%= image_tag('retirar_friso_madera.jpg', size: "60", class: 'oferta_imagen' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Crea tu base de datos para acceder a todas las ofertas</b></h5></span>
                      <% end %>                    
                    <% end %>
                  </li>
                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <%= link_to presupuestos_path do %>
                        <%= image_tag('retirar_friso_madera.jpg', size: "60", class: 'oferta_imagen' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Tus clientes</b></h5></span>
                    <% end %> 
                  </li>
                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <%= image_tag('retirar_friso_madera.jpg', size: "60", class: 'oferta_imagen' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Estadísticas y mercado</b></h5> <h5><span style="font-size: 14px;">(* en desarrollo)</span></h5></span>                    
                  </li>                                         
                </ul>

              </div>

            <% else %>

              <div class="iconos_inicio">

                <h3 style="font-weight: bold; margin-top: 50px;">Empieza en ConstructUX</h3>
                <ul style="list-style: none; width: 100%; padding: 0px; margin: 0px;" class="">

                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <%= image_tag('nueva_vivienda.jpg', size: "60", class: 'oferta_imagen_grande' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Nueva vivienda</b></h5> <h5><span style="font-size: 14px;">(* en desarrollo)</span></h5></span>
                  </li>

                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <%= link_to new_reform_path do %>
                      <%= image_tag('retirar_friso_madera.jpg', size: "150x150", class: 'oferta_imagen_grande' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Nueva Reforma</b></h5></span>
                    <% end %>
                  </li>
                  <li style="align-items: center; text-align: center; padding: 10px;">
                    <%= link_to reforms_path do %>
                        <%= image_tag('nuevo_proyecto.jpg', size: "60", class: 'oferta_imagen_grande' ) %> <span style=""><h5 style="font-size: 22px; color: #444;"><b>Tus proyectos</b></h5></span>
                    <% end %> 
                  </li>                         
                </ul>

              </div>

            <% end %>

            <%= render 'shared/lista_ofertas' %>

          </div>
        </div>
      </div>


    </div>
  </div>

<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <div class="container-fluid-principal" style="background-color: white;  margin-bottom: 150px;">
          <!-- <h1 style="font-weight: lighter;">La mejor manera de diseñar tu reforma o construir tu vivienda.</h1> -->
          <h1 style="font-weight: lighter;">Diseña tu reforma y tu presupuesto a tu medida, con precios de referencia por partidas podrás elegir y diseñar la reforma perfecta.</h1>
          <h1 style="line-height: 40px; font-weight: bolder;">Hemos creado la herramienta perfecta para que tengas todo el control sobre el presupuesto del proyecto de reforma de tu baño, salón, cocina...</h1>


          <div class="wrapper" style="padding-top: 20px;">
            <%= link_to "Sign up now!", signup_path(empresa: false), class: "btn btn-lg btn-primary",  style: "background-color: white; border: 1px solid #0084B4; color: #0084B4;" %>

            <%= link_to "¿Ya eres usuario?", login_path, class: "btn btn-lg btn-primary", style: "background-color: #0084B4; color: white;" %>
          </div>

          <div class="wrapper" style="padding-top: 30px;">
            <h3 style="font-weight: 400;">¿Quieres probar con tu primer proyecto?</h3>
            <%= link_to "Crea tu primer proyecto", '/reforma', class: "btn btn-lg btn-primary",  style: "background-color: white; border: 1px solid #ff5050; color: #ff5050;" %>
          </div>  

          <div style="padding-top: 15px; text-align: center;">
            <h3 style="font-weight: 400;">Por favor si te gusta compártelo con tus amigos, gracias!!</h3>
            <!-- FACEBOOK share button -->
            <div class="fb-share-button" 
            data-href="https://www.constructux.com" 
            data-layout="button_count"
            data-size="large"
            style= "display: inline-flex; padding-left: 0px;"></div> 

            <!-- TWITTER share button -->
            <div style="display: inline-flex;"><a href="https://twitter.com/share" class="twitter-share-button" data-url="https://www.constructux.com" data-size="large"></a></div>
            <script src="//platform.twitter.com/widgets.js"></script>                      
          </div> 

            <!-- <h2>Una vez tengas diseñado el presupuesto de tu reforma, lo mandamos a las mejores empresas constructoras, albañiles, fontaneros, carpinteros... valoradas por los usuarios para que en muy poco tengas todas los prespuestos de las empresas en tu móvil, sin hancer nada. A claro, es GRATIS, para siempre. </h2> -->

        </div>

        <div class="constructor">
          <%= render 'shared/lista_ofertas' %>
        </div>

        <div class="wrapper" style="margin-top: 100px;">
          <h3>¿Eres una empresa del sector de la construcción y te gustaría trabajar con nosotros?</h3>
          <%# link_to "Participa!", signup_path(empresa: true), class: "btn btn-lg btn-primary",  style: "background-color: white; border: 1px solid #0084B4; color: #0084B4;" %>
          <h5>Mándanos un correo a la siguiente dirección y en breve nos pondremos en contacto: </h5>
          <h3 style="font-size: 26px;">constructux@constructux.com</h3>
        </div> 

        <h3 style="font-size: 18px;">Mira otras reformas creadas por otros usuarios</h3>

        <% @reforms.each do |reform| %>
          <h5 style="margin-top: 25px; display: inline-flex;">Reforma:</h5> <h3 style="margin-top: 0px; margin-bottom: 15px; display: inline-flex; color: #666;"><%= link_to reform.nombre, "/reforma/#{reform.id}" %></h3>
          <h3 style="margin-top: 0px; margin-bottom: 15px;"><%= Budget.find_by(reform_id: reform) %></h3>
        <% end %>

      </div>
    </div>
  </div>
<% end %>


   



<script>
  $(function () {
  $('[data-toggle="popover"]').popover()
  })
</script> 
