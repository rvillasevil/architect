          <%= render 'shared/micropost_form' %>
        </section>
        
        <div class="home_popular">
          <ul>
            <li class="home">
              <%= link_to "Home", root_url %>
            </li>
            <li class="popular">
              <%= link_to "Most voted", '/popular' %>
            </li>
