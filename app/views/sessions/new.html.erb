 <div class="container" style="background-color: white; width: 100%;">
    <% provide(:title, "Log in") %>
    

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div style="border-bottom: 1px solid #eeeeee;">
          <h1 style="font-size: 44px; font-weight: 500; text-align: left; font-family: 'Open Sans';">Login</h1>  
        </div>
        <div style="padding: 10px 0px;">
          <%= form_for(:session, url: login_path) do |f| %>

            <div>
              <i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i>
              <%= f.label :email, style: "color: grey; " %>
              <%= f.email_field :email, class: 'form-control', placeholder: "Te mandaremos el correo de activación a la cuenta de correo electrónico" %>
            </div>

            <div>
              <i class="fa fa-key fa-lg" aria-hidden="true"></i>
              <%= f.label :password, style: "color: grey; " %>
              <b><%= link_to "(forgot password)", new_password_reset_path %></b>
              <%= f.password_field :password, class: 'form-control', placeholder: "Password..." %>
            </div>

            <%= f.label :remember_me, class: "checkbox inline", style: "font-size: 14px;" do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
            <div style="padding-top: 20px;">
              <%= f.submit "Log in", class: "btn btn-primary" %>              
            </div>
          <% end %>

          <div style="padding-top: 20px;">New user? <%= link_to "Sign up now!", signup_path %></div>  
        </div>
        
      </div>
    </div>
  </div>