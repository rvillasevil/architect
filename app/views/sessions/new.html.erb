  <div class="background-imagen">
    <div class="container">
    <% provide(:title, "Log in") %>
    <h1>Log in</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email, style: "color: white; font-size: 18px;" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, style: "color: white; font-size: 18px;" %>
          <b><%= link_to "(forgot password)", new_password_reset_path %></b>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :remember_me, class: "checkbox inline", style: "color: white; font-size: 14px;" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>

          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        <span style="color: white;">New user? <%= link_to "Sign up now!", signup_path %></span>
      </div>
    </div>
  </div>
</div>