<!-- Colapsable -->
<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo" style="margin: 5px;">Share something</button>
    <div id="demo" class="collapse">
    <!-- Formulario del micropost -->
    <%= form_for(@micropost, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <ul style="list-style-type: none; -webkit-padding-start: 5px;">
        <li style="display: inline-flex; margin-top: 10px;">
            <%= image_tag (current_user.foto.url), class: "img-circle", size: 25 if current_user.foto? %>
        </li>
        <li style="display: inline-flex; width: 90%;">
            <%= f.text_area :content, placeholder: "Your comments" %>
        </li>

    </ul>
    <div class="iconos-share">
        <ul style="display: inline-flex; list-style-type: none;">
            <li style="display: inline;">
                    <%= f.text_field :video, placeholder: "Or send us a video. Just copy the video code from youtube" %>      
            </li>
            <li style="display: inline;">
                <%= f.file_field(:picture, accept: 'image/jpeg,image/gif,image/png',  class: 'file_input') %>
            </li>
            
            
         </ul>
         <ul style="display: inline-flex; list-style-type: none;">
            <li style="display: inline; margin-bottom: 0px; width: 50%;">
                <%= f.select :hashtag1, [
                        '',
                        'Family',
                        'People rights',
                        'Education',
                        'Energy',
                        'Environment',
                        'Health Care',
                        'Immigration',
                        'Jobs and Economy',
                        'National Security',
                        'Goverments',
                        'Elderly',
                        'Science and Technology',
                        'Voting',
                        'Reforms and Proposals',
                        'Sports',
                        'Daily Life'] %>
            </li>  
            <li style="display: inline; margin: 0px;">
                    <%= f.text_field :link, placeholder: "Or maybe a link" %>
            </li>
        </ul>
    </div>
    

