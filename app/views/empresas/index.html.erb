<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
   
    <div class="col-md-10">
      <p id="notice"><%= notice %></p>
      <div class="constructor">
        <h1>Empresas</h1>

        <table>
          <thead>
            <tr>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @empresas.each do |empresa| %>
              <tr>
                <td><%= empresa.user_id %></td>
                <td><%= link_to 'Show', empresa %></td>
                <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
                <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Empresa', new_empresa_path %>
      </div>
    </div>
  </div>
</div>    
