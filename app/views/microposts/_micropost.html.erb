<li id="micropost-<%= micropost.id %>">
    <%= image_tag (micropost.user.foto.url), class: "img-circle", size: 50 if micropost.user.foto? %>

    <span display="inline-block"><%= link_to micropost.user.name, micropost.user %>
      <span>
        <%= micropost.user.followers.count %>
      </span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user?(micropost.user) %>
          <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </span>
    </span>

    <!--  Contenido texto -->
    <span class="content">
      <%= micropost.content %> 
    </span>
    <!--  Imagen -->
    <% if micropost.picture? %>
      <div class="picture_content"> <%= image_tag (micropost.picture.url), class: "img-responsive", width: "100%"   %> 
      </div>
    <% end %>

    <!--  video -->
    <% if micropost.video? %>
      <div class="video-responsive">
        <iframe
        src="https://www.youtube.com/embed/<%= micropost.video %>" frameborder="0" allowfullscreen></iframe>
      </div>
    <% end %>

    <!--  links -->
  <% if micropost.link? %>
    <div class="links">
     <!-- <%= doc = Nokogiri::HTML(open(micropost.link), nil, 'UTF-8', 'ISO-8859') %> -->
    <h4 style="margin: 2px"><span class= "content" style="padding-top: 5px"><%= @title = doc.at_css("title").text %></span></h4>
  <% end %>

  <% if micropost.link? %>
  <a style="margin-left: 7px">
      <%= link_to (micropost.link.scan( /([^>]*)./).first.last), micropost.link %></a>   
    </div>
  <% end %>  
    

