<p id="notice"><%= notice %></p>

<h1>Habitacions</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Demo quitar azulejo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @habitacions.each do |habitacion| %>
      <tr>
        <td><%= habitacion.nombre %></td>
        <td><%= habitacion.demo_quitar_azulejo %></td>
        <td><%= link_to 'Show', reform_habitacion_path(id: habitacion.id) %></td>
        <td><%= link_to 'Edit', edit_reform_habitacion_path(habitacion.id, reform_id: habitacion.reform_id) %></td>
        <td><%= link_to 'Destroy', reform_habitacion_path(habitacion, reform_id: habitacion.reform_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Habitacion', new_reform_habitacion_path(reform_id: params[:reform_id]) %>

<%= link_to 'Return to reform', reform_path(id: params[:reform_id]) %>
