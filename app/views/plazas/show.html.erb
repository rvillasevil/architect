<div class="container">
  <% provide(:title, @plaza.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= image_tag @plaza.foto.url, class: "img-rounded", size: 100 if @plaza.foto? %>
          <%= @plaza.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'plazas/plaza_stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'groups/seguir_form' if logged_in? %>
      <%= render 'plazas/plaza_post_form' %>
      <% if @microposts.any? %>
        <h4>Posts (<%= @microposts.count %>)</h4>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
      
    </div>
  </div>
</div>